# Gemini CLI Configuration
# Command to invoke the Gemini CLI tool (default: 'gemini')
# You can specify a full path like '/usr/local/bin/gemini' if needed
GEMINI_CLI_COMMAND=gemini

# Set to 'true' to use mock Gemini service (for testing without CLI tool)
USE_MOCK_GEMINI=true

# Twitter API Configuration (optional - for Twitter/X URL support)
# Get your Bearer Token from https://developer.twitter.com/en/portal/dashboard
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Input Configuration
OBSIDIAN_NOTES_PATH=./notes

# Processing Options
# Set to 'true' to preview results without modifying files
DRY_RUN=false
